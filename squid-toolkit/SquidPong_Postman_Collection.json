  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set JWT token as cookie if JWT_USER1 variable is set",
          "if (pm.variables.get('JWT_USER1')) {",
          "    pm.request.headers.add({",
          "        key: 'Cookie',",
          "        value: 'accessToken=' + pm.variables.get('JWT_USER1')",
          "    });",
          "}"
        ]
      }
    }
