{
	"info": {
		"_postman_id": "notify-service-complete",
		"name": "SquidPong - Notify Service",
		"description": "Complete Notify Service API with all endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Notifications",
			"item": [
				{
					"name": "Get Notification History",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "x-user-id",
								"value": "{{userId}}"
							},
							{
								"key": "Cookie",
								"value": "accessToken={{JWT_USER1}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/notify/history?limit=20&offset=0",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"notify",
								"history"
							],
							"query": [
								{
									"key": "limit",
									"value": "20"
								},
								{
									"key": "offset",
									"value": "0"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Mark Notification as Read",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "x-user-id",
								"value": "{{userId}}"
							},
							{
								"key": "Cookie",
								"value": "accessToken={{JWT_USER1}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/notify/read/{{notificationId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"notify",
								"read",
								"{{notificationId}}"
							]
						}
					},
					"response": []
				},
				{
					"name": "Mark All Notifications as Read",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "x-user-id",
								"value": "{{userId}}"
							},
							{
								"key": "Cookie",
								"value": "accessToken={{JWT_USER1}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/notify/read-all",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"notify",
								"read-all"
							]
						}
					},
					"response": []
				},
				{
					"name": "Delete Notification",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "x-user-id",
								"value": "{{userId}}"
							},
							{
								"key": "Cookie",
								"value": "accessToken={{JWT_USER1}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/notify/{{notificationId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"notify",
								"{{notificationId}}"
							]
						}
					},
					"response": []
				},
				{
					"name": "Delete All Notifications",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "x-user-id",
								"value": "{{userId}}"
							},
							{
								"key": "Cookie",
								"value": "accessToken={{JWT_USER1}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/notify/all",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"notify",
								"all"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "User Management (Internal)",
			"item": [
				{
					"name": "Create User Notify",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "x-secret-token",
								"value": "{{SECRET_TOKEN}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"userId\": 1,\n  \"username\": \"testuser\",\n  \"preferences\": {\n    \"notifications\": {\n      \"friendRequests\": true,\n      \"messages\": true,\n      \"gameInvites\": true,\n      \"tournamentInvites\": false\n    }\n  }\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/user/create",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"user",
								"create"
							]
						}
					},
					"response": []
				},
				{
					"name": "Update User Notify",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "x-secret-token",
								"value": "{{SECRET_TOKEN}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"updateduser\",\n  \"preferences\": {\n    \"notifications\": {\n      \"friendRequests\": false,\n      \"messages\": true,\n      \"gameInvites\": true,\n      \"tournamentInvites\": true\n    }\n  }\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/user/{{userId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"user",
								"{{userId}}"
							]
						}
					},
					"response": []
				},
				{
					"name": "Delete User Notify",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "x-secret-token",
								"value": "{{SECRET_TOKEN}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/user/{{userId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"user",
								"{{userId}}"
							]
						}
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:4433",
			"type": "string"
		},
		{
			"key": "userId",
			"value": "1",
			"type": "string"
		},
		{
			"key": "notificationId",
			"value": "1",
			"type": "string"
		},
		{
			"key": "SECRET_TOKEN",
			"value": "your-secret-token-here",
			"type": "string"
		},
		{
			"key": "JWT_USER1",
			"value": "your-jwt-token-here",
			"type": "string"
		}
	]
}
