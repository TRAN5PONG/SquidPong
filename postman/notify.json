		"_exporter_id": "40559190"
	},
	"item": [
		{
			"name": "Notifications",
			"item": [
				{
					"name": "Get Notification History",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "x-user-id",
								"value": "{{userId}}"
							}
						],
						"url": {
							"raw": "{{notifyBaseUrl}}/api/notify/history?page=1&limit=20",
							"host": [
								"{{notifyBaseUrl}}"
							],
							"path": [
								"api",
								"notify",
								"history"
							],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "20"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Mark Notification as Read",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "x-user-id",
								"value": "{{userId}}"
							}
						],
						"url": {
							"raw": "{{notifyBaseUrl}}/api/notify/read/:notifyId",
							"host": [
								"{{notifyBaseUrl}}"
							],
							"path": [
								"api",
								"notify",
								"read",
								":notifyId"
							],
							"variable": [
								{
									"key": "notifyId",
									"value": "{{notifyId}}"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Mark All as Read",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "x-user-id",
								"value": "{{userId}}"
							}
						],
						"url": {
							"raw": "{{notifyBaseUrl}}/api/notify/read-all",
							"host": [
								"{{notifyBaseUrl}}"
							],
							"path": [
								"api",
								"notify",
								"read-all"
							]
						}
					},
					"response": []
				},
				{
					"name": "Delete Notification",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "x-user-id",
								"value": "{{userId}}"
							}
						],
						"url": {
							"raw": "{{notifyBaseUrl}}/api/notify/:notifyId",
							"host": [
								"{{notifyBaseUrl}}"
							],
							"path": [
								"api",
								"notify",
								":notifyId"
							],
							"variable": [
								{
									"key": "notifyId",
									"value": "{{notifyId}}"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Delete All Notifications",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "x-user-id",
								"value": "{{userId}}"
							}
						],
						"url": {
							"raw": "{{notifyBaseUrl}}/api/notify/all",
							"host": [
								"{{notifyBaseUrl}}"
							],
							"path": [
								"api",
								"notify",
								"all"
							]
						}
					},
					"response": []
				}
			]
		}
	],
